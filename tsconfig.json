{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": false,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "outDir": "lib"
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": ["node_modules", "**/node_modules/*"]
}
